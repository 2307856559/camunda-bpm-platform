<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <display-name>camunda bpm rest api</display-name>
  
  <listener>
    <listener-class>org.camunda.bpm.engine.rest.hal.cache.HalCacheBootstrap</listener-class>
  </listener>
  
  <context-param>
    <param-name>org.camunda.hal.cache.config</param-name>
    <param-value>
    {
      "cacheImplementation": "org.camunda.bpm.engine.rest.hal.cache.DefaultHalResourceCache",
      "caches": {
        "org.camunda.engine.identity.User": {"maxEntries": 100, "timeToLiveSeconds": 600 },
        "org.camunda.engine.repository.ProcessDefinition": {"maxEntries": 100, "timeToLiveSeconds": 600 }
      }
    }
    </param-value>
  </context-param>
  
  <filter>
    <filter-name>CacheControlFilter</filter-name>
    <filter-class>org.camunda.bpm.engine.rest.filter.CacheControlFilter</filter-class>    
  </filter>
  <filter-mapping>
    <filter-name>CacheControlFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
